# ======================
# Database Configuration
# ======================
DATABASE_URL=postgresql://admin:admin@localhost:5432/health_db
DATABASE_TEST_URL=postgresql://admin:admin@localhost:5432/health_test_db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_RECYCLE=3600

# =============================
# Authentication & Security
# =============================
SECRET_KEY=90924b32e351d8b157da9eb68f0868ba37e9db3f4303eec93a28d9aa7bd0bf2a
JWT_SECRET_KEY=9d08658134336b01fb05feb2900c0fbae6d43104b0be1f84881ca00c0edc79e9
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour
JWT_REFRESH_TOKEN_EXPIRES=86400  # 24 hours
PASSWORD_RESET_EXPIRES=1800  # 30 minutes
PASSWORD_HASH_SCHEME=pbkdf2_sha512
PASSWORD_SALT_LENGTH=32

# ====================
# Email Configuration
# ====================
EMAIL_HOST=smtp.yourprovider.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@domain.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=no-reply@yourhealthapp.com
EMAIL_USE_TLS=True
EMAIL_TIMEOUT=10
EMAIL_MAX_RETRIES=3

# ========================
# Application Settings
# ========================
DEBUG=False  # Always False in production!
FLASK_ENV=production
SERVER_NAME=api.yourhealthapp.com
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE='Lax'
PREFERRED_URL_SCHEME=https

# CORS Configuration
CORS_ORIGINS=http://localhost:8501,https://yourhealthapp.com,https://www.yourhealthapp.com
CORS_SUPPORTS_CREDENTIALS=True
CORS_MAX_AGE=86400

# ===================
# Redis Configuration
# ===================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TIMEOUT=300  # 5 minutes

# ====================
# Admin Configuration
# ====================
DEFAULT_ADMIN_EMAIL=admin@cemahealthapp.com
DEFAULT_ADMIN_PASSWORD=admin123  # Change this before production!
ADMIN_INITIAL_PASSWORD_CHANGE=True

# ===================
# Rate Limiting
# ===================
RATE_LIMIT=200 per day
RATE_LIMIT_AUTH=50 per hour
RATE_LIMIT_API=1000 per hour
RATE_LIMIT_STRATEGY=fixed-window

# ===================
# Security Headers
# ===================
HSTS_ENABLED=True
HSTS_MAX_AGE=31536000  # 1 year
HSTS_INCLUDE_SUBDOMAINS=True
HSTS_PRELOAD=True
CSP_ENABLED=True
XSS_PROTECTION_ENABLED=True
CONTENT_TYPE_NOSNIFF=True
FRAME_DENY=True

# =============
# Logging
# =============
LOG_LEVEL=INFO
LOG_FILE=/var/log/health_app/health_app.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5
LOG_FORMAT='%(asctime)s - %(name)s - %(levelname)s - %(message)s'

# =================
# File Uploads
# =================
UPLOAD_FOLDER=/var/www/uploads/health_app
MAX_FILE_SIZE=16777216  # 16MB in bytes
FILE_SERVER_BASE_URL=https://yourdomain.com/uploads
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.pdf,.doc,.docx

# =================
# Monitoring
# =================
SENTRY_DSN=your-sentry-dsn-if-using
PROMETHEUS_ENABLED=False
HEALTH_CHECK_TIMEOUT=30

# =================
# Feature Flags
# =================
MAINTENANCE_MODE=False
REGISTRATION_ENABLED=True
PASSWORD_RESET_ENABLED=True